[Unit]
Description=Roaring VM sinks (vm_game/vm_chat/vm_music)
After=pipewire.service pipewire-pulse.service wireplumber.service
Wants=pipewire-pulse.service wireplumber.service
StartLimitIntervalSec=60
StartLimitBurst=10

[Service]
Type=simple
ExecStart=%h/bin/roaring_vm_sinks.sh
Restart=on-failure
RestartSec=2
TimeoutStartSec=30

[Install]
WantedBy=default.target
