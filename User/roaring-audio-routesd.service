[Unit]
Description=Roaring routes daemon (vm_* -> Astro target)
After=pipewire.service pipewire-pulse.service wireplumber.service roaring-vm-sinks.service
Wants=pipewire-pulse.service wireplumber.service roaring-vm-sinks.service
Conflicts=roaring-audio-stackd.service
StartLimitIntervalSec=60
StartLimitBurst=10

[Service]
Type=simple
ExecStart=%h/bin/roaring_audio_routesd.sh
Restart=on-failure
RestartSec=2
TimeoutStartSec=30

[Install]
WantedBy=default.target
