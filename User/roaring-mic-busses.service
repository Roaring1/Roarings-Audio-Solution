[Unit]
Description=Roaring Mic B1/B2 virtual busses (PipeWire-Pulse)
After=pipewire.service pipewire-pulse.service wireplumber.service
Wants=pipewire-pulse.service wireplumber.service
StartLimitIntervalSec=60
StartLimitBurst=10

[Service]
Type=simple
ExecStart=%h/bin/roaring_mic_bussesd.sh
Restart=on-failure
RestartSec=1
TimeoutStartSec=30

[Install]
WantedBy=default.target
