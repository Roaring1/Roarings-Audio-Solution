[Unit]
Description=Roaring mic router (SM7B/Astro -> B1/B2)
After=pipewire.service pipewire-pulse.service wireplumber.service roaring-mic-busses.service
Wants=pipewire-pulse.service wireplumber.service roaring-mic-busses.service
StartLimitIntervalSec=60
StartLimitBurst=10

[Service]
Type=simple
ExecStart=%h/bin/roaring_mic_routesd.sh
Restart=on-failure
RestartSec=1
TimeoutStartSec=30

[Install]
WantedBy=default.target
