[Unit]
Description=LPD8 mixer (VM buses + Astro target control)
After=pipewire.service pipewire-pulse.service wireplumber.service roaring-audio-routesd.service
Wants=pipewire-pulse.service wireplumber.service roaring-audio-routesd.service
StartLimitIntervalSec=60
StartLimitBurst=10

[Service]
Type=simple
ExecStart=%h/bin/lpd8_mixer.sh
RestartSec=0.5
TimeoutStartSec=2
KillMode=control-group
Restart=always

[Install]
WantedBy=default.target
